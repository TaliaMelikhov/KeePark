@model KeePark.ViewModels.ParkingSpotCreate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Share Your Own Spot</h2>

<h4>Parking Spot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SpotName" class="control-label"></label>
                <input asp-for="SpotName" class="form-control" />
                <span asp-validation-for="SpotName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpotDescription" class="control-label"></label>
                <input asp-for="SpotDescription" class="form-control" />
                <span asp-validation-for="SpotDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteType" class="control-label"></label><br>
                @Html.DropDownListFor(m => m.SiteType, new List<SelectListItem>
                {
                   new SelectListItem{ Text="Resturant", Value = "0" },
                   new SelectListItem{ Text="Theater", Value = "1" },
                   new SelectListItem{ Text="Cinema", Value = "2" },
                   new SelectListItem{ Text="Private Parking", Value = "3" },
                   new SelectListItem{ Text="Other", Value = "4" },
                }, "-Select-")
            </div>

            <div class="form-group row">
                <label asp-for="parkingPhoto" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="parkingPhoto" class="form-control custom-file-input" type="file">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

            @*This script is required to display the selected file in the file upload element*@

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }

        </form>
    </div>
</div>

<div>
</div>