@model KeePark.Models.ParkingSpot
@using KeePark.ViewModels
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "~/SpotImages/" + (Model.filePath ?? "noimage.jpg");
}

<style>
    .mycard {
        size: 20rem;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        grid-gap: 200px;
        align-items: stretch;
    }
</style>

<h2>Edit</h2>

<h4>ParkingSpot</h4>
<hr />
<div class="grid">
    <div class="card">
        <form enctype="multipart/form-data" method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParkingSpotID" />
            <div class="form-group">
                <label asp-for="SpotName" class="control-label"></label>
                <input asp-for="SpotName" class="form-control" />
                <span asp-validation-for="SpotName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpotDescription" class="control-label"></label>
                <input asp-for="SpotDescription" class="form-control" />
                <span asp-validation-for="SpotDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label class="custom-file-label">Choose File...</label>
                    <input class="form-control custom-file-input" type="file" name="file">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <!-- Your share button code -->

        </form>
    </div>

    <div class="card">
        <img class="card-img-top" src="@photoPath" asp-append-version="true" height="400" width="500" />
    </div>

    @*This script is required to display the selected file in the file upload element*@

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

</div>